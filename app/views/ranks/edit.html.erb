<%= error_messages_for :rank %>
<% form_for @rank do |f| %>
  <div class="box" id="box-ranks-edit">
    <span class="top"><%=t :edit_rank %></span>
    <p class="label"><label for="rank_title"><%=t :title %></label></p>
    <p><%= f.text_field :title, :style => 'width:20%;' %></p>
    <p class="label"><label for="rank_min_posts"><%=t :minimum_posts %></label></p>
    <p><%= f.text_field :min_posts, :style => 'width:5%;' %></p>
    <p>
      <%= submit_tag I18n.t(:save_changes), :disable_with => I18n.t(:save_changes) %>&nbsp;
      <%= link_to I18n.t(:cancel), ranks_path %>
    </p>
</div>
<% end %>
<%= javascript_tag "$('rank_title').focus();" %>